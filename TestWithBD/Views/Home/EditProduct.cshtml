@model Product

<form asp-action="EditProduct" asp-controller="home" method="post">
    <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#editModal-@Model.Id">
        Изменить
    </button>


    <div class="modal fade" id="editModal-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="editModalLabel-@Model.Id" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="editModalLabel-@Model.Id">Редактирование</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Название товара</label>
                        <input type="text" asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label">Выберите категорию:</label>
                        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))" class="form-control">
                            <option value="">Выберите категорию</option>
                        </select>
                    </div>

                    <input asp-for="Id" class="d-none" />

                </div>
                <div class="modal-footer">
                    <input type="submit" value="Сохранить" class="btn btn-light" />
                </div>
            </div>
        </div>
    </div>
</form>