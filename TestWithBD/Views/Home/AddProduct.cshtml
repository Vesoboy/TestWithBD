@model Product

<button type="button" class="btn btn-dark" data-toggle="modal" data-target="#addModal">
    Добавить товар
</button>


<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="AddProduct" asp-controller="Home" method="post">
                <div class="modal-header">
                    <h4 class="modal-title" id="addModalLabel">Добавить товар</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Название товара</label>
                        <input type="text" asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label">Выберите категорию:</label>
                        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))" class="form-control">
                            <option value="">Выберите категорию</option>
                        </select>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="submit" value="Добавить" class="btn btn-light" />
                </div>
            </form>
        </div>
    </div>
</div>